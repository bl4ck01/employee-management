

<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Listing Employees</h3>
  </div>
  <div class="panel-body">

<table class="table table-contextual table-hover table-responsive">
  <thead>
    <tr>
      <th>Emp ID</th>
      <th>Name</th>
      <th>Location</th>    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.emp_id %></td>
        <td><%=link_to employee.name ,employee %></td>       
        <td><%= employee.location %></td> 
        <td><%= link_to 'Edit', edit_employee_path(employee) ,class: "btn btn-warning btn-sm"%></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>
</div>
<%= link_to 'New Employee', new_employee_path ,class: "btn btn-success btn-sm"%>